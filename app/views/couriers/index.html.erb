<h1><%= t('all_couriers') %></h1>
<% @couriers.each do |courier| %>
  <p>
    <%= courier.name %>,
    <%= courier.email %>,
    <%= courier.packages.count.to_s + " " %>
    - <%= link_to t('show'), courier %>, <%= link_to t('edit'), edit_courier_path(courier) %>
  </p>
<% end %>
<div>
  <%= link_to t('add_new_courier'), new_courier_path %>
</div>